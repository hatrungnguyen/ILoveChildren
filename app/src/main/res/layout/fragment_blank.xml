<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <RelativeLayout
        android:id="@+id/greetingSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profileImage"
            android:text="Hello, Jacob!"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/notificationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:contentDescription="Notification Icon"
            android:src="@drawable/ic_notification" />
    </RelativeLayout>

    <TextView
        android:id="@+id/heartHealthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetingSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Heart Health"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/healthCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/heartHealthTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#E1F5D8"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/khung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/haha"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle"
                android:src="@drawable/ic_heart"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/healthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/haha"
                android:text="Health"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lastDiagnosisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/healthText"
                android:layout_marginTop="4dp"
                android:text="Last diagnosis of heart\n3 days ago"
                android:textColor="#777"
                android:textSize="14sp" />

            <Button
                android:id="@+id/diagnosticButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:background="@drawable/rounded"
                android:text="Diagnostic"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/heartImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Heart Image"
                android:src="@drawable/radiant" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/khung2"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/healthCard"
        android:orientation="horizontal"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/sds"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/ic_heartpres" />

                <TextView
                    android:id="@+id/wwewe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sds"
                    android:text="Heart pressure" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wwewe">

                    <TextView
                        android:id="@+id/valueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="45sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/denominatorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 80"
                        android:textSize="20sp"
                        app:layout_constraintStart_toEndOf="@id/valueText"
                        app:layout_constraintTop_toTopOf="@id/valueText"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:paddingStart="4dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/sds1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/ic_heartrythmn" />

                <TextView
                    android:id="@+id/wwewe1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sds1"
                    android:text="Heart pressure" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wwewe1">

                    <TextView
                        android:id="@+id/valueText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="45sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/denominatorText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 80"
                        android:textSize="20sp"
                        app:layout_constraintStart_toEndOf="@id/valueText1"
                        app:layout_constraintTop_toTopOf="@id/valueText1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/doctorCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/khung2"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctorImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Doctor Image"
                android:src="@drawable/img"
                />

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/doctorImage"
                android:text="Robert Fox"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctorSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorName"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/doctorImage"
                android:text="Cardiologist"
                android:textColor="#777"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/callButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_call"
                android:background="@drawable/circle"/>

            <ImageView
                android:id="@+id/messageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/callButton"
                android:contentDescription="Message Button"
                android:src="@drawable/ic_chat_x24"
                android:background="@drawable/circle"
                android:scaleType="centerInside"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
