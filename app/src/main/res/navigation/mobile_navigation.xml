<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="vn.edu.usth.ilovechildren.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_sleepFragment"
            app:destination="@id/sleepFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="vn.edu.usth.ilovechildren.ui.my_profile.MyProfileFragment"
        android:label="@string/title_my_profile"
        tools:layout="@layout/fragment_my_profile" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="vn.edu.usth.ilovechildren.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="vn.edu.usth.ilovechildren.ui.home.HomeFragment"
        android:label="HomeFragment"/>

    <fragment
        android:id="@+id/sleepFragment"
        android:name="vn.edu.usth.ilovechildren.ui.sleep.SleepFragment"
        android:label="SleepFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="vn.edu.usth.ilovechildren.MainActivity"
        android:label="MainActivity" />
</navigation>